<%= provide(:title, '総勘定元帳一覧') %>

<h2>総勘定元帳一覧</h2>

<div>
  <!--補助科目-->
  <table class="table table-bordered table-condensed table-hover" id="table-account">
    <thead>
      <tr>
        <th>補助科目名</th>
        <th>借方金額</th>
        <th>貸方金額</th>
        <th>残高</th>
      </tr>
    </thead>
    <tbody>
      </th>
      </tr>
      <% sub_compound_journals_ary.each do |ary| %>
      <tr>
        <td>
          <%= link_to sub_master_general_ledger_accounts_path(param_account_title: ary) do %>
            <div><%= ary %></div>
          <% end %>
        </td>
        <td><%= "#{sub_left_amount(ary).to_s(:delimited)}円" %></td>
        <td><%= "#{sub_right_amount(ary).to_s(:delimited)}円" %></td>
        <td><%= "#{all_general_ledger_balance(sub_left_amount(ary).to_i, sub_right_amount(ary).to_i, ary).to_s(:delimited)}円" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table class="table table-bordered table-condensed table-hover" id="table-account">
    <thead>
      <tr>
        <th>勘定科目名</th>
        <th>借方金額</th>
        <th>貸方金額</th>
        <th>残高</th>
      </tr>
    </thead>
    <tbody>
      <% compound_journals_ary.each do |ary| %>
      <tr>
        <td>
          <%= link_to master_general_ledger_accounts_path(param_account_title: ary) do %>
            <div><%= ary %></div>
          <% end %>
        </td>
        <td><%= "#{left_amount(ary).to_s(:delimited)}円" %></td>
        <td><%= "#{right_amount(ary).to_s(:delimited)}円" %></td>
        <td><%= "#{all_general_ledger_balance(left_amount(ary).to_i, right_amount(ary).to_i, ary).to_s(:delimited)}円" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
