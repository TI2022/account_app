<%= provide(:title, '総勘定元帳一覧') %>

<h2><%= l(@first_day, format: :month) %>総勘定元帳一覧</h2>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-account">
    
    <thead>
      <tr>
        <th>勘定科目名</th>
        <th>借方金額</th>
        <th>貸方金額</th>
        <th>残高</th>
      </tr>
    </thead>
    <tbody>
      <% compound_journals_ary.each do |ary| %>
      <tr>
        <td>
          <%= link_to master_general_ledger_accounts_path(param_account_title: ary) do %>
            <div><%= ary %></div>
          <% end %>
        </td>
        <td><%= left_amount(ary) %></td>
        <td><%= right_amount(ary) %></td>
        <td><%= left_amount(ary).to_i - right_amount(ary).to_i %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
</div>
