<%= provide(:title, '当座預金出納帳一覧') %>
<%= provide(:class_text, 'account--form') %>
<%= provide(:button_text, '送信') %>

<h2><%= l(@first_day, format: :year) %>の当座預金出納帳一覧</h2>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="container">
      
      <div class="badge badge-secondary">絞り込み検索</div>
      
      <div class="row">
        
        <div class="col-sm-4">
          <%= form_with(scope: :search, url: accounts_path, method: :get, local: true) do |f| %>
            <div>
              <%= f.label :accounting_date, '日付', class: "label-#{yield(:class_text)}"  %>
            </div>
            <div>
              <%= f.date_field :accounting_date, class: 'datetime-form-control' %>
            </div>
            <div>
              <%= f.submit '検索', class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
        
        <div class="col-sm-4">
          <%= form_with(scope: :search, url: accounts_path, method: :get, local: true) do |f| %>
            <div>
              <%= f.label :customer, '得意先', class: "label-#{yield(:class_text)}"  %>
            </div>
            <div>
              <%= f.text_field :customer, class: 'datetime-form-control' %>
            </div>
            <div>
              <%= f.submit '検索', class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
        
      </div>
      
      
      
      
          
    </div>
  </div>
</div>
<div>
  <%= link_to "絞り込み解除", accounts_path, class: "btn btn-success" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-account">
    
    <thead>
      <tr>
        <th>日付</th>
        <th>小切手番号</th>
        <th>預入</th>
        <th>引出</th>
        <th>借/貸</th>
        <th>残高</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= l(account.accounting_date, format: :short) %></td>
          <td><%= account.check_number %></td>
          <td><%= account.deposit %></td>
          <td><%= account.drawer %></td>
          <td><%= account.debit_credit %></td>
          <td><%= account.balance %></td>
          <td class="center">
            <%= link_to "修正", current_edit_account_path(account), class: "btn btn-primary" %>
            <%= link_to "削除", current_destroy_account_path(account), method: :delete,
                                data: { confirm: "#{l(account.accounting_date, format: :long)}の当座預金出納帳データを削除してよろしいですか？" },
                                class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
</div>