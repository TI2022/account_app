<%= provide(:title, '売上帳編集') %>
<%= provide(:class_text, 'account--form') %>

<h2><%= l(@account.accounting_date, format: :long) %>の売上帳編集</h2>

<div>
  
  <table class="table table-bordered table-condensed table-hover" id="table-account">
    
    
    <thead>
      <tr>
        <th>日付</th>
        <th>摘要</th>
      </tr>
    </thead>
    
    <tbody>
      
      
      <tr>
      
        <td><%= l(@account.accounting_date, format: :long) %></td>
        
        <td>
          
            <%= form_with(model: @account, local: true, method: :patch) do |f| %>
              <%= f.label :customer, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :customer, class: "form-control" %>
              <%= f.label :receiving_method, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :receiving_method, class: "form-control" %>
              <%= f.label :product_name, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :product_name, class: "form-control" %>
              <%= f.label :quantity, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :quantity, class: "form-control" %>
              <%= f.label :unit_price, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :unit_price, class: "form-control" %>
              <%= f.label :breakdown, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :breakdown, class: "form-control" %>
              <%= f.label :amount, class: "label-#{yield(:class_text)}" %>
              <%= f.text_field :amount, class: "form-control" %>
              
              <%= f.submit "更新", class: "btn btn-block btn-primary btn-#{yield(:class_text)}" %>
            <% end %>
            </div>
          </div>
        </td>
        
        
        
      </tr>
      
    </tbody>
    
    
    
  </table>
</div>