<%= provide(:title, '総勘定元帳帳') %>

<h2><%= l(@first_day, format: :year) %>総勘定元帳帳</h2>

<div class="btn-users-show">
  <% unless @first_day <= @general_ledger_accounts.first.accounting_date %>
    <%= link_to "⇦ 月", general_ledger_accounts_path(accounting_date: @first_day.prev_month), class: "btn btn-info" %>
  <% else %>
    <%= link_to "⇦ 月", general_ledger_accounts_path(accounting_date: @first_day.prev_month), class: "btn btn-info disabled" %>
  <% end %>
  <% unless @first_day >= @general_ledger_accounts.last.accounting_date.beginning_of_month %>
    <%= link_to "月 ⇨", general_ledger_accounts_path(accounting_date: @first_day.next_month), class: "btn btn-info" %>
  <% else %>
    <%= link_to "月 ⇨", general_ledger_accounts_path(accounting_date: @first_day.next_month), class: "btn btn-info disabled" %>
  <% end %>
