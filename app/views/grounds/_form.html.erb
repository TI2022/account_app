<%= form_with(model: @ground, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :fishing_ground_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :fishing_ground_name, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>